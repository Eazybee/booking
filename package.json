{
  "name": "booking-service-unit-test-kata",
  "version": "1.0.0",
  "description": "This challange is about writing unit tests and refactor the legacy code.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint"
  },
  "author": "Vlad Schiop",
  "devDependencies": {
    "@types/jest": "^21.1.6",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.2",
    "tslint": "^5.9.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(js?|ts?)$"
  },
  "keywords": [
    "booking-list kata"
  ],
  "dependencies": {
    "typescript": "^2.6.1"
  }
}
